{
  "name": "form-management-api",
  "version": "1.0.0",
  "description": "Conversational forms backend API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build:prod": "tsc && cp .env.production dist/.env",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/data-source.ts src/migration/Migration",
    "migration:create": "npm run typeorm -- migration:create src/migration/Migration",
    "migration:run": "npm run typeorm -- migration:run -d src/config/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/data-source.ts",
    "seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test-connection": "ts-node -r tsconfig-paths/register src/scripts/test-connection.ts",
    "create-db": "ts-node -r tsconfig-paths/register src/scripts/create-database.ts"
  },
  "dependencies": {
    "@types/pg": "^8.11.11",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.21.2",
    "pg": "^8.14.1",
    "typeorm": "^0.3.21",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.28",
    "@types/uuid": "^9.0.8",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  }
}
